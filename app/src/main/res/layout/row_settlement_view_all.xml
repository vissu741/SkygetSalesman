<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/create_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight=".8"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Created\nDate" />

                <TextView
                    android:id="@+id/salesman_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Employee\nName" />

                <TextView
                    android:id="@+id/salesman_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Employee\nId" />

                <TextView
                    android:id="@+id/settlement_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Settlement\nPeriod"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/upload_proof"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:contentDescription="Upload\nProof"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Comment" />


                <!--<TextView
                    android:id="@+id/student_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Student\Id" />

                <TextView
                    android:id="@+id/sub_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Subscription\n Name" />


                <TextView
                    android:id="@+id/offer_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Offer Amount" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Total Amount" />

                <TextView
                    android:id="@+id/i_will_take"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="..." />-->
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>