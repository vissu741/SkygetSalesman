<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.YesterDayVideosFragment">



        <LinearLayout
            android:id="@+id/linear_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="4.5">

            <TextView
                android:id="@+id/student_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="StudentId" />

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="Student Name" />


           <!-- <TextView
                android:id="@+id/offer_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="Offer Amount"
                android:visibility="visible" />-->

            <!-- <TextView
                 android:id="@+id/total"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:visibility="visible"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:fontFamily="@font/calibri_bold"
                 android:text="Total Amount" />-->

            <TextView
                android:id="@+id/contacted_take"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="Contact\nInfo" />

            <TextView
                android:id="@+id/i_will_take"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="View" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear_lay"
            android:background="@color/colorBlack" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/get_salesman_students_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_lay"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <TextView
            android:id="@+id/no_text_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No Doubts to watch"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar_doubts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>


