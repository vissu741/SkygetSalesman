<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/colorOrange"
        android:backgroundTint="@color/colorOrange"
        app:cardCornerRadius="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_20sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tbnCancel_withdraw"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_baseline_withdraw"
                    android:fontFamily="@font/calibri_bold" />

            </RelativeLayout>


            <TextView
                android:id="@+id/doubts_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/calibri_regular"
                android:gravity="center"
                android:visibility="gone"
                android:text="Doubt Posted Successfully!"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/doubts_notify_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/calibri_regular"
                android:gravity="center"
                android:text="You will get reply in short time..."
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_18sdp" />


            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_bg_white"
                android:fontFamily="@font/calibri_bold"
                android:padding="@dimen/_5sdp"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>