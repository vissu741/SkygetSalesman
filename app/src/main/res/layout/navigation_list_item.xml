<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_shape">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nav_round_shape"
            android:overScrollMode="never"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.github.florent37.shapeofview.shapes.ArcView
                    android:id="@+id/diagonalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_8sdp"
                    app:arc_cropDirection="cropOutside"
                    app:arc_height="@dimen/_60sdp"
                    app:arc_position="bottom"
                    app:shape_arc_cropDirection="outside"
                    app:shape_arc_height="@dimen/_60sdp"
                    app:shape_arc_position="bottom">
                   <!-- android:id="@+id/diagonalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_8sdp"
                    app:arc_cropDirection="cropOutside"
                    app:arc_height="@dimen/_60sdp"
                    app:arc_position="bottom">-->

                    <LinearLayout
                        android:id="@+id/profilelayouts1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:background="@drawable/profile_gradient_color"
                        android:orientation="vertical">

                        <!-- <com.github.florent37.arclayout.ArcLayout
                             android:id="@+id/diagonalLayout1"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/_170sdp"
                             android:elevation="@dimen/_8sdp"
                             app:arc_cropDirection="cropOutside"
                             app:arc_height="@dimen/_60sdp"
                             app:arc_position="bottom">-->

                        <com.github.florent37.shapeofview.shapes.ArcView
                            android:id="@+id/diagonalLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:elevation="@dimen/_8sdp"
                            app:arc_cropDirection="cropOutside"
                            app:arc_height="@dimen/_60sdp"
                            app:arc_position="bottom"
                            app:shape_arc_cropDirection="outside"
                            app:shape_arc_height="@dimen/_60sdp"
                            app:shape_arc_position="bottom">
                            <!--android:id="@+id/diagonalLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:elevation="@dimen/_8sdp"
                            app:arc_cropDirection="cropOutside"
                            app:arc_height="@dimen/_60sdp"
                            app:arc_position="bottom">-->

                            <LinearLayout
                                android:id="@+id/profilelayouts"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_170sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/prof_gradient_color"
                                android:orientation="vertical">
                                //Category and Standard

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="left"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/calibri_regular"
                                            android:padding="@dimen/_3sdp"
                                            android:text="SKYGET"
                                            android:textColor="#B466C9"
                                            android:textSize="@dimen/_16sdp" />

                                        <androidx.appcompat.widget.AppCompatTextView

                                            android:id="@+id/symbol"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/calibri_regular"
                                            android:paddingTop="@dimen/_5sdp"
                                            android:text="@string/r_symbol"
                                            android:textColor="#B466C9" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/category_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/category_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:fontFamily="@font/calibri_regular"
                                            android:padding="@dimen/_3sdp"
                                            android:text="Category"
                                            android:textSize="@dimen/_13sdp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:id="@+id/standard_text"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:fontFamily="@font/calibri_regular"
                                                android:padding="@dimen/_3sdp"
                                                android:text="Standard"
                                                android:textSize="@dimen/_13sdp" />

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/change_edit_category"
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:layout_gravity="right"
                                                android:padding="@dimen/_3sdp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                                //Logo and Profile Layout

                                <LinearLayout
                                    android:id="@+id/profileimglayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="@dimen/_25sdp"
                                        android:fontFamily="@font/calibri_regular"
                                        android:text="Counsellor"
                                        android:textColor="#B466C9" />


                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/profile_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_70sdp"
                                        android:src="@drawable/ic_profile_icon_one" />

                                    <!--//name layout-->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/profile_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/calibri_regular"
                                            android:padding="@dimen/_3sdp"
                                            android:text="Name"
                                            android:textSize="@dimen/_14sdp" />

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                            <!--</com.github.florent37.arclayout.ArcLayout>-->
                        </com.github.florent37.shapeofview.shapes.ArcView>

                    </LinearLayout>
                    <!-- </com.github.florent37.arclayout.ArcLayout>-->
                </com.github.florent37.shapeofview.shapes.ArcView>

                <LinearLayout
                    android:id="@+id/livezonelayouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    //LiveZone

                    <LinearLayout
                        android:id="@+id/aply_student_disc_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/aply_student_disc_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_student_discount" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/aply_student_disc_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Apply Student Discount"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/aply_student_disc_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sales_payment_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/sales_payment_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_sales_report" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/sales_payment_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Counsellor Reports"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sales_payment_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/assigned_stds_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/assigned_stds_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_assigned_students" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/assigned_stds_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Assigned Students"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/assigned_stds_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linking_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="9">

                        <View
                            android:id="@+id/linking_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/affiliate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/linking_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Linking Amount"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/linking_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/my_account_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/my_account_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_profile_icon_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/my_account_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="My Account"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/my_account_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/settlement_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/settlement_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/affiliate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/settlement_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Settlement"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/settlement_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/new_customers_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/new_customers_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />
/
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/affiliate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/new_customers_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="New Students"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/new_customers_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/my_new_list_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/my_new_list_View"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/affiliate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/my_new_list_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="My New List"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/my_new_list_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logout_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="9">

                        <View
                            android:id="@+id/logout_view"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="0.2"
                            android:background="@color/colorPrimaryDark" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_logout_icon" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_logOut_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5.8"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Logout"
                            android:textSize="@dimen/_14sdp" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/logout_arrow"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_right_arrow" />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_NavigationActivity_Snackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            android:visibility="gone" />
    </RelativeLayout>
</layout>