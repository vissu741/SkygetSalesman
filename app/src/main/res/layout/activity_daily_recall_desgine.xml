<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:background="@drawable/ic_dailyrecallbackground1"
       android:padding="30dp">
       <ImageView
           android:layout_width="80dp"
           android:layout_height="100dp"
           android:layout_marginStart="3dp"
           android:layout_marginTop="2dp"
           android:src="@drawable/ic_bulbimage"
           android:id="@+id/bulbimage"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Daily Recall"
               android:layout_alignParentRight="true"
               android:layout_marginStart="86dp"
               android:layout_marginTop="20dp"
               android:textSize="30dp"
               android:textStyle="normal"
               android:id="@+id/TvDailyRecall"
               android:textColor="@color/black"/>
       <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="(Important Model Questions)"
               android:layout_alignParentRight="true"
               android:layout_marginStart="90dp"
         android:layout_marginTop="55dp"
               android:textSize="17dp"

           android:textColor="@color/black"
           android:id="@+id/TvImportent"
              />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:src="@drawable/ic_class_01"
           android:padding="2dp"
           android:id="@+id/classImage"
           android:layout_below="@id/TvImportent"
           android:layout_marginTop="30dp"/>


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="02/Jun/2021"
           android:textColor="#D0FFD600"
           android:textSize="23dp"
           android:layout_marginTop="455dp"
           android:layout_marginStart="10dp"

           android:id="@+id/Tvdate"
           />



    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_strip_01"
        android:layout_marginTop="480dp"
        android:id="@+id/imagestrip"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:layout_width="283dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_yellow__strip_01"
        android:layout_marginTop="615dp"
        android:id="@+id/Yellowstrip"
        android:layout_marginStart="27dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Trigonometry - Basic of"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="normal"
        android:layout_marginTop="525dp"
        android:id="@+id/TvTrigonomentry"
        android:layout_marginStart="35dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Trigonometric Equations"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="normal"
        android:layout_marginTop="545dp"
        android:id="@+id/TvTrigonomentryEquatuions"
        android:layout_marginStart="33dp"/>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="5 Qns. / 10 Min"
        android:textSize="18dp"
        android:textColor="#0BCFED"
        android:textStyle="bold"
        android:layout_marginTop="567dp"
        android:id="@+id/TvQuestions"
        android:layout_marginStart="33dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Active"
        android:textSize="18dp"
        android:textColor="#0BCFED"
        android:textStyle="bold"
        android:layout_marginTop="625dp"
        android:id="@+id/Tvactive"
        android:layout_marginStart="215dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Rank:"
        android:textSize="18dp"
        android:textColor="#EDE90B"
        android:textStyle="bold"
        android:layout_marginTop="603dp"
        android:id="@+id/TvRank"
        android:layout_marginStart="33dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="25dp"
        android:textColor="#EDE90B"
        android:textStyle="normal"
        android:layout_marginTop="596dp"
        android:id="@+id/Tvone"
        android:layout_marginStart="79dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="-"
        android:textSize="27dp"
        android:textColor="#EDE90B"
        android:textStyle="normal"
        android:layout_marginTop="603dp"
        android:id="@+id/Tvline"
        android:layout_marginStart="82dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Take"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_marginTop="664dp"
        android:id="@+id/TvTake"
        android:layout_marginStart="240dp"/>


</RelativeLayout>






















