            <TextView
                android:id="@+id/downpayment_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/img_exam"
                android:fontFamily="@font/calibri_bold"
                android:imeOptions="actionDone"
                android:text="Down Payment:"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/downpaymenttip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editdownpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorWhite"
                    android:drawablePadding="10dp"
                    android:ems="18"
                    android:enabled="true"
                    android:fontFamily="@font/calibri_regular"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:text="0"
                    android:textColor="@color/textGrayColor"
                    android:textSize="@dimen/_16sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/emi_months_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/img_exam"
                android:fontFamily="@font/calibri_bold"
                android:imeOptions="actionDone"
                android:text="EMI Months:"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/emi_months_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:prompt="@string/spinner_title" />

            <TextView
                android:id="@+id/monthly_payment_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/img_exam"
                android:fontFamily="@font/calibri_bold"
