            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar_doubts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>
</layout>